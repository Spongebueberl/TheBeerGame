<Window x:Class="The_Beer_Game.childwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_Beer_Game"
        mc:Ignorable="d"
        Title="Credit Application" Height="400" Width="300">

    <Grid>
        <Label Content="Kreditantrag" HorizontalAlignment="Left" Margin="60,10,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" Margin="0,41,0,0" Name="CreditConditionsTB" Text="Konditionen" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Height="87"/>
        <Slider HorizontalAlignment="Center" Margin="0,133,0,0" Name="CreditSlider" VerticalAlignment="Top" Width="180" SmallChange="1" ValueChanged="CreditSlider_ValueChanged" IsSnapToTickEnabled="True" TickPlacement="BottomRight" Maximum="60" Height="40"/>
        <Label Content="0" Name="CreditSliderLabel"  HorizontalAlignment="Center" Margin="0,160,0,0" VerticalAlignment="Top" Height="30" RenderTransformOrigin="0.826,0.657" Width="40" HorizontalContentAlignment="Center"/>
        <Button Content="Submit" Name="SubmitCreditButton" HorizontalAlignment="Center" Height="50" Width="100" Margin="0,195,0,0" VerticalAlignment="Top" Click="SubmitCreditButton_Click"/>

    </Grid>
</Window>
